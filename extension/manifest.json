{
  "manifest_version": 2,

  "name": "Sterlings Glasses",
  "description": "experience what it feels like to be a racist",
  "version": "0.1",

  "background": {
    "scripts": ["grammar.js", "reverse.js", "background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery.js", "findAndReplaceDOMText.js", "grammar.js", "injection.js"]
  }],

  "permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    "source_maps/jquery-1.10.2.min.map"
  ]
}
